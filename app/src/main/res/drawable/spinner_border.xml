<!-- res/drawable/spinner_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@android:color/white" /> <!-- background color -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" /> <!-- border color -->
    <corners android:radius="6dp" />
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>